{
  "name": "qlaw-cli",
  "version": "0.1.4",
  "description": "Interactive terminal UI chat application built with OpenTUI and React. A modern, developer-friendly chat interface for your terminal with commands, mentions, and AI integration.",
  "module": "src/index.tsx",
  "type": "module",
  "bin": {
    "qlaw": "./src/index.tsx"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Qredence/qlaw-cli.git"
  },
  "bugs": {
    "url": "https://github.com/Qredence/qlaw-cli/issues"
  },
  "homepage": "https://github.com/Qredence/qlaw-cli#readme",
  "publishConfig": {
    "provenance": true,
    "access": "public"
  },
  "author": "Qredence",
  "keywords": [
    "cli",
    "tui",
    "terminal",
    "chat",
    "ai",
    "opentui",
    "react",
    "interactive",
    "openai",
    "assistant",
    "chatbot",
    "command-line",
    "terminal-ui"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.tsx",
    "start": "bun run src/index.tsx",
    "test": "bun test",
    "typecheck": "bunx tsc -p tsconfig.json --noEmit",
    "check": "bun run typecheck && bun test",
    "bridge": "bash -lc './bridge/run.sh'",
    "cli:af": "bash -lc 'AF_BRIDGE_BASE_URL=${AF_BRIDGE_BASE_URL:-http://127.0.0.1:8081} AF_MODEL=${AF_MODEL:-multi_tier_support} bun run src/index.tsx'",
    "e2e:bridge": "bash -lc 'AF_BRIDGE_BASE_URL=${AF_BRIDGE_BASE_URL:-http://127.0.0.1:8081} AF_MODEL=${AF_MODEL:-multi_tier_support} bun run examples/e2e-bridge.ts'",
    "handoff": "bash -lc 'bun run check && ( ./bridge/run.sh & ) && sleep 2 && AF_BRIDGE_BASE_URL=${AF_BRIDGE_BASE_URL:-http://127.0.0.1:8081} AF_MODEL=${AF_MODEL:-multi_tier_support} bun run src/index.tsx'",
    "prepublishOnly": "bun run typecheck"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opentui/core": "^0.1.40",
    "@opentui/react": "^0.1.40",
    "applicationinsights": "^3.12.0",
    "react": "^19.1.1"
  },
  "resolutions": {
    "@opentui/core": "^0.1.40"
  }
}
